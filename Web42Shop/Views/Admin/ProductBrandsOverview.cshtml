@model  Web42Shop.ViewModels.ProductBrandsViewModel
@{
    ViewData["Title"] = "Tổng quan nhãn hàng";
    Layout = "~/Views/Admin/_AdminIndexLayout.cshtml";
}

    <div class="container-fluid overview">
        <div class="row">
            <div class="container-fluid">
                <a asp-controller="Admin" asp-action="ProductsOverview" class="overview__title">Sản phẩm</a>
                <a asp-controller="Admin" asp-action="ProductBrandsOverview" class="overview__title overview__title--active">Nhãn hàng</a>
                <a asp-controller="Admin" asp-action="ProductsOverview" class="overview__title">Loại sản phẩm</a>
            </div>
        </div>
        <a asp-controller="ProductBrands" asp-action="Create" class="overview__button overview__button--new"><i class="fas fa-plus"></i>Thêm Nhãn Hàng</a>

        <table class="overview__table overview__table--brands">
            <tr>
                <th>Nhãn hàng</th>
                <th>Ngày tạo</th>
                <th>Ngày chỉnh sửa cuối</th>
                <th>Sửa</th>
                <th>Xóa</th>
            </tr>

            @{
                foreach (var brand in Model.ProductBrands)
                {
                    <tr>
                        <td><a asp-controller="ProductBrands" asp-action="Details" asp-route-id="@brand.Id">@brand.Name</a></td>
                        <td>@brand.DateCreate</td>
                        <td>@brand.DateModify</td>
                        <td>
                            <a asp-action="Edit" asp-controller="ProductBrands" asp-route-id="@brand.Id" class="overview__button overview__button-- "><i class="fas fa-edit"></i> Edit</a>
                        </td>
                        <td> <a asp-action="Delete" asp-controller="ProductBrands" asp-route-id="@brand.Id" class="overview__button overview__button--delete"><i class="fas fa-trash-alt"></i>Delete</a></td>
                    </tr>
                }
            }
        </table>

        <div class="row">
            <div class="container txt-center w100">
                <a asp-controller="Admin" asp-action="ProductBrandsOverview" class="iblck pagi pagi--active">1</a>
                <a asp-controller="Admin" asp-action="ProductBrandsOverview" class="iblck pagi">2</a>
                <a asp-controller="Admin" asp-action="ProductBrandsOverview" class="iblck pagi">3</a>
                <a asp-controller="Admin" asp-action="ProductBrandsOverview" class="iblck pagi">4</a>
                <a asp-controller="Admin" asp-action="ProductBrandsOverview" class="iblck pagi">5</a>
                <a asp-controller="Admin" asp-action="ProductBrandsOverview" class="iblck pagi">6</a>
                <a asp-controller="Admin" asp-action="ProductBrandsOverview" class="iblck pagi">7</a>
                <a asp-controller="Admin" asp-action="ProductBrandsOverview" class="iblck pagi">8</a>
                <a asp-controller="Admin" asp-action="ProductBrandsOverview" class="iblck pagi">9</a>
            </div>
        </div>
    </div>

