@model Web42Shop.ViewModels.ProductsNewViewModel
@{
    ViewData["Title"] = "Thêm sản phẩm mới";
    Layout = "~/Views/Admin/_AdminIndexLayout.cshtml";
}

<div class="container-fluid create">
    <p class="create__title">Sản phẩm mới</p>
    <form asp-controller="Admin" asp-action="ProductsCreate" method="post">
        <div class="form-row">
            <div class="col">

                <div class="form-group">
                    <input asp-for="Product.Name" type="text" class="form-control" placeholder="Tên sản phẩm" />
                </div>

                <div class="form-row">
                    <div class="col form-group">
                        <select asp-for="Product.ProductType_Id" class="form-control">
                            @foreach (var item in Model.ProductTypes)
                            {
                                <option value="@item.Id">
                                    @item.Type
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col form-group">
                        <select asp-for="Product.ProductBrand_Id" class="form-control">
                            @foreach (var item in Model.ProductBrands)
                            {
                                <option value="@item.Id">
                                    @item.Name
                                </option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col form-group">
                        <input type="text" class="form-control" placeholder="Đơn giá" />
                    </div>
                    <div class="col form-group">
                        <input type="text" class="form-control" placeholder="% giảm giá" />
                    </div>
                    <div class="col form-group">
                        <input type="text" class="form-control" placeholder="Giá bán ra" readonly/>
                    </div>
                </div>

                <div class="form-row">
                    
                    <textarea rows="10" cols="300" class="form-control" id="changethis">Mô tả sản phẩm</textarea>
                    <!-- Đổi textarea thành ckeditor -->
                   
                    <script src="~/js/ckeditor.js"></script>
                    <script>
                        ClassicEditor
                            .create( document.querySelector('#changethis' ) )
                            .then( editor => {
                                window.editor = editor;
                            } )
                            .catch( err => {
                                console.error( err.stack );
                            } );
                    </script>
                </div>

                <div class="form-row">
                    <div class="custom-file">
                        <input id="Thumbnail" type="file" class="custom-file-input form-control"/>
                        <label class="custom-file-label" for="Thumbnail">Ảnh sản phẩm</label>
                        <script>
                        
                            // Hiển thị tên file đang được chọn
                            $(".custom-file-input").on("change", function ()
                            {
                                var fileName = $(this).val().split("\\").pop();
                                if (fileName != "#" && fileName != "")
                                {
                                    var content = "<img src=\"..\\images\\" + fileName + "\" width=\"100\" height=\"100\">";
                                    document.getElementById("ThumbnailReview").innerHTML = content;
                                }
                                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
                            });
                        </script>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="col form-group">
                        <button type="button" class="create__button create__button--preview">Xem thử</button>
                    </div>
                    <div class="col form-group">
                        <button type="button" class="create__button create__button--release">Đăng bán</button>
                    </div>
                </div>
            </div>
            <div class="col" id="ThumbnailReview"><!-- Ảnh sẽ hiển thị ở đây --></div>
        </div>
    </form>
</div>
