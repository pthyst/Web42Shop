@model Web42Shop.ViewModels.CheckOutMustSignUpViewModel
@{ViewBag.Title = "Thông tin thanh toán";
    Layout = "~/Views/Shared/Users/_IndexLayout.cshtml";
}

<div class="container-fluid section">
    <div class="container">
        <h2>Thông tin thanh toán</h2>
        <form asp-controller="Checkout" asp-action="MustSignUp" method="post">
            <div class="form-row">
                <div class="form-group col">
                    <label asp-for="@Model.User.NameLast">Họ</label>
                    <input type="text" class="form-control" asp-for="@Model.User.NameLast">
                    <span asp-validation-for="@Model.User.NameLast" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="@Model.User.NameMiddle">Họ đệm</label>
                    <input type="text" class="form-control" asp-for="@Model.User.NameMiddle">
                    <span asp-validation-for="@Model.User.NameMiddle" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="@Model.User.NameFirst">Tên</label>
                    <input type="text" class="form-control" asp-for="@Model.User.NameFirst">
                    <span asp-validation-for="@Model.User.NameFirst" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="@Model.User.Email">Email</label>
                    <input type="email" class="form-control" asp-for="@Model.User.Email">
                    <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="@Model.User.Password">Mật khẩu</label>
                    <input type="password" class="form-control" asp-for="@Model.User.Password">
                    <span asp-validation-for="@Model.User.Password" class="text-danger"></span>
                </div>
            </div>
    
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label asp-for="@Model.User.AddressApartment">Số nhà</label>
                    <input type="text" class="form-control" asp-for="@Model.User.AddressApartment">
                    <span asp-validation-for="@Model.User.AddressApartment" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="@Model.User.AddressStreet">Đường</label>
                    <input type="text" class="form-control" asp-for="@Model.User.AddressStreet">
                    <span asp-validation-for="@Model.User.AddressStreet" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="@Model.User.AddressDistrict">Quận</label>
                    <input type="text" class="form-control" asp-for="@Model.User.AddressDistrict">
                    <span asp-validation-for="@Model.User.AddressDistrict" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="@Model.User.AddressCity">Thành Phố</label>
                    <input type="text" class="form-control" asp-for="@Model.User.AddressCity">
                    <span asp-validation-for="@Model.User.AddressCity" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col">
                    <label asp-for="@Model.User.PhoneNumber">Số điện thoại</label>
                    <input type="text" class="form-control" asp-for="@Model.User.PhoneNumber">
                    <span asp-validation-for="@Model.User.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="@Model.User.DateBirth">Ngày sinh</label>
                    <input type="date" class="form-control" asp-for="@Model.User.DateBirth" value=@DateTime.Now.ToString("yyyy-MM-dd")>
                    <span asp-validation-for="@Model.User.DateBirth" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="@Model.User.Gender">Giới tính</label>
                    <select asp-for="@Model.User.Gender" class="form-control">
                        <option value="male">Nam</option>
                        <option value="female">Nữ</option>
                    </select>
                </div>
            </div>

            <input type="hidden" asp-for="@Model.User.Role_Id" value="4">
            <input type="hidden" asp-for="@Model.AnoCartId">
            <br />
            
            <input class="btn btn-primary btn-lg" type="submit" value="Hoàn tất">
        </form>
    </div>
</div>