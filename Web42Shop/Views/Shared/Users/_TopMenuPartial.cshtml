@using Web42Shop.Models;
@using Microsoft.AspNetCore.Http;
<div class="container-fluid topmenu sticky">
    <div class="container txt-center">
        @{
            int n = Model.ProductTypes.Count;
            @if (n > 0)
            {
                @for (int i = 0; i <= 5; i++)
                {
                    var type = Model.ProductTypes[i] as ProductType;
                    ViewBag.hau = type;
                    <a href="~/@type.URL" class="topmenu__href">@type.Type</a>
                }
                <div class="topmenu__href topmenu__href--dropdown">
                    <a href="#">Khác<i class="fas fa-caret-down"></i></a>
                    <div class="iblck mrg0 padd0 txt-center topmenu__submenu">
                        @for (int i = 8; i < n; i++)
                        {
                            var type = Model.ProductTypes[i];
                            <a href="~/Products/ListProducts/?type=@type.Type" class="iblck">@type.Type</a>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>