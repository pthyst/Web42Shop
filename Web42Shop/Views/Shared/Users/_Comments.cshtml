@model Web42Shop.ViewModels.PerformCommentsViewModel



<div class="container-fluid mrg0 padd0" id="CommentContainer">
    @foreach (var com in Model.Comments)
    {
        <div class="comment">
            <p class="mrg0 iblck comment__username">@com.User</p>
            <p class="mrg0 iblck comment__datetime"><i>@com.DateCreate</i></p>
            <div class="blck comment_stars">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= com.Stars)
                    {
                        <i class="fas fa-star star--yellow"></i>
                    }
                    else
                    {
                        <i class="fas fa-star"></i>
                    }
                }
            </div>
            <div class="comment__content">
                <p>@com.Content</p>
            </div>
        </div>
    }
    @if (Model.StillComments)
    {
        <button onclick="moreComments(@Model.IdProduct)" class="more-cmt">Xem Thêm</button>
    }
</div>