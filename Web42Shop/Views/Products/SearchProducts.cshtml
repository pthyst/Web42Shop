@model Web42Shop.ViewModels.ListItemProductsViewModel
@{
    ViewData["Title"] = "Web42shop - Tìm kiếm sản phẩm";
    Layout = "~/Views/Shared/Users/_IndexLayout.cshtml";
}

<div class="container-fluid section">
    <!-- Sản phẩm mới -->
    <div class="container">
        <h1 class="section__title">Kết quả tìm kiếm: </h1><h3 class="iblck" style="margin-left: 1rem">@Model.Value </h3>
        @{
            int dem = 1;
        }
        @foreach (var item in Model.ItemProducts)
        {
            if (dem == 1)
            {
                @:<div class="row">
                }
                      <a href="#" class="col-3 product">
                          @if (item.Saleoff != 0)
                          {
                              <p class="mrg0 iblck fl product__saleoff">-@item.Saleoff%</p>
                          }
                          <p class="mrg0 iblck fr product__views">
                              <i class="fas fa-heart"></i> @item.Stars
                              <i class="fas fa-eye"></i> @item.Views
                              <i class="fas fa-shopping-cart"></i> @item.Orders
                          </p>
                          <img src="~/uploads/@item.Thumbnail" class="product__image" />
                          <div class="product__info">
                              <p class="mrg0 product__name">@item.Name</p>
                              @if (item.Saleoff != 0)
                              {
                                  <p class="mrg0 product__oldprice">@String.Format("{0:0,0 VNĐ}", item.Price) </p>
                                  <p class="mrg0 product__newprice">@String.Format("{0:0,0 VNĐ}", item.Price - item.Price * item.Saleoff / 100)</p>
                              }
                              else
                              {
                                  <p class="mrg0 product__newprice">@String.Format("{0:0,0 VNĐ}", item.Price)</p>
                              }
                          </div>
                      </a>

                if (dem == 4)
                {
                    dem = 0;
                @:</div>
            }
            dem++;
        }
        <!-- Section pagination -->
        <div class="container txt-center section__pagination">
            @if (Model.CurrentPage > 1)
            {
                <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@(Model.CurrentPage - 1)" class="paginumber paginumber--first"><i class="fas fa-caret-left"></i></a>
            }

            <!--chia nút-->
            @if (Model.TotalPage <= 8)
            {
                for (int i = 1; i <= Model.TotalPage; i++)
                {
                    if (i != Model.CurrentPage)
                    {
                        <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@i" class="paginumber">@i</a>
                    }
                    if (i == Model.CurrentPage)
                    {
                        <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@i" class="paginumber paginumber--active">@i</a>
                    }
                }
            }
            else
            {
                if ((Model.CurrentPage - 1) <= 4)
                {
                    for (int i = 1; i <= 7; i++)
                    {
                        if (i != Model.CurrentPage)
                        {
                            <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@i" class="paginumber">@i</a>
                        }
                        if (i == Model.CurrentPage)
                        {
                            <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@i" class="paginumber paginumber--active">@i</a>
                        }
                    }
                    <a href="" class="paginumber">...</a>
                    <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@Model.TotalPage" class="paginumber">@Model.TotalPage</a>
                }
                else if ((Model.TotalPage - Model.CurrentPage) == 3)
                {
                    <a href="~/products/SearchProducts/?key_s=@Model.Value&page=1" class="paginumber">1</a>
                    <a href="" class="paginumber">...</a>
                    for (int i = Model.TotalPage - 6; i <= Model.TotalPage; i++)
                    {
                        if (i != Model.CurrentPage)
                        {
                            <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@i" class="paginumber">@i</a>
                        }
                        if (i == Model.CurrentPage)
                        {
                            <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@i" class="paginumber paginumber--active">@i</a>
                        }
                    }
                }
                else if ((Model.TotalPage - Model.CurrentPage) < 3)
                {
                    for (int i = 1; i <= 4; i++)
                    {
                        if (i != Model.CurrentPage)
                        {
                            <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@i" class="paginumber">@i</a>
                        }
                    }
                    <a href="" class="paginumber">...</a>
                    for (int i = Model.TotalPage - 4; i <= Model.TotalPage; i++)
                    {
                        if (i != Model.CurrentPage)
                        {
                            <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@i" class="paginumber">@i</a>
                        }
                        if (i == Model.CurrentPage)
                        {
                            <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@i" class="paginumber paginumber--active">@i</a>
                        }
                    }
                }
                else
                {
                    <a href="~/products/SearchProducts/?key_s=@Model.Value&page=1" class="paginumber">1</a>
                    <a href="" class="paginumber">...</a>

                    <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@(Model.CurrentPage-2)" class="paginumber">@(Model.CurrentPage - 2)</a>
                    <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@(Model.CurrentPage-1)" class="paginumber">@(Model.CurrentPage - 1)</a>
                    <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@(Model.CurrentPage)" class="paginumber paginumber--active">@(Model.CurrentPage)</a>
                    <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@(Model.CurrentPage+1)" class="paginumber">@(Model.CurrentPage + 1)</a>
                    <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@(Model.CurrentPage+2)" class="paginumber">@(Model.CurrentPage + 2)</a>

                    <a href="" class="paginumber">...</a>
                    <a href="~/products/index/?page=@Model.TotalPage" class="paginumber">@Model.TotalPage</a>
                }
            }

            <!---->

            @if (Model.CurrentPage <= Model.TotalPage - 1)
            {
                <a href="~/products/SearchProducts/?key_s=@Model.Value&page=@(Model.CurrentPage + 1)" class="paginumber paginumber--last"><i class="fas fa-caret-right"></i></a>
            }
        </div>
    </div>
</div><!-- end of section Sản phẩm mới -->


